<h1>Enter information for a new farm</h1>

<form action="/farms/" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="name">Farm Name:</label>
  <input type="text" id="name" name="farm[name]"><br>
  <label for="upick">Pick Your Own</label>
  <input type="checkbox" id="upick" name= "farm[pick_your_own]"><br>
  <label for="acres">Acres:</label>
  <input type="text" id="acres" name="farm[acres]"><br>
  <input type="submit" id="submit" name="Submit">  
</form>